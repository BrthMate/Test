{% extends ('base.html.twig') %}

{% block stylesheets %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
<link rel="stylesheet" href="{{ asset('css/app.css') }}">
{% endblock %}

{% block body %}


<div class="container mt-5">

    <div class="d-flex mb-3 flex-row-reverse ">
      <input id="toggle" class="toggle" type="checkbox" role="switch" name="toggle" value="on">
      <label for="toggle" class="slot">
        <span class="slot__label">API</span>
        <span class="slot__label">OFF</span>
      </label>
    </div>

    <!-- The Modal -->
    <div class="modal" id="modal">
      <div class="modal-dialog">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            Modal body..
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary modal-btn" data-bs-dismiss="modal">Close</button>
          </div>

        </div>
      </div>
    </div>

    {% for notice in app.flashes('success') %}

    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{ notice }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    {% endfor %}
    

    <form method="post" action="/send" class="form-floating">
        <div class="row">
            <div class="form-floating col-12 col-sm-6 mb-3">
                <input type="text" name="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
                <label for="floatingEmail">E-mail címed</label>
                <div id="email-msg"></div>
              </div>
            <div class="form-floating col-12 col-sm-6 mb-3">
                <input type="text" name="name" class="form-control" id="floatingName" placeholder="Password">
                <label for="floatingName">Neved</label>
                <div id="name-msg"></div>
            </div>
        </div>
        <div class="mb-3">
            <div class="form-floating">
                <textarea name="message" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 150px"></textarea>
                <label for="floatingTextarea2">Üzenet szövege</label>
                <div id="text-msg"></div>
            </div>
        </div>
        <button type="submit" id="btn" class="btn btn-primary col-12 col-sm-4">Küldés</button>
        
    </form>
</div>

{% endblock %}


{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<script src="{{ asset('js/app.js') }}" ></script>

{% endblock %}